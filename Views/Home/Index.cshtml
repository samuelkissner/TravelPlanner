@model IEnumerable<Trip>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center pb-5" >
    <h1 class="display-4">Upcoming Trips</h1>
</div>

<div class="card-deck">

    @{foreach (var trip in Model)
        {
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">@trip.Name</h3>
            </div>

            <div class="card-body">
                <img class="card-img text-center" src="~/images/no-image.png">
            </div>

            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="TripDetails" asp-route-id=@trip.ID class="btn btn-primary">view</a>
                <a class="btn btn-primary">edit</a>
                <a class="btn btn-danger">delete</a>
            </div>

        </div>  
        }
    }

</div>
