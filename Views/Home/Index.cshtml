@model IEnumerable<Trip>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center pb-5" >
    <h1 class="display-4">Upcoming Trips</h1>
</div>

<div class="card-deck">

    @{foreach (var trip in Model)
        {
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">@trip.Name</h3>
            </div>

            <div class="card-body">
                <img class="card-img text-center" src="~/images/no-image.png">
            </div>

            <div class="card-footer">
                <div class="btn-block text-center">
                    <div class="btn btn-primary"> <a href="~/Home/TripDetails/@trip.ID">view</a></div>
                    <div class="btn btn-primary">edit</div>
                    <div class="btn btn-danger">delete</div>
                </div>
            </div>

        </div>  
        }
    }

</div>
