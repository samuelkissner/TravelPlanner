@model IEnumerable<Trip>

@{
    ViewData["Title"] = "Home Page";

}

<div class="text-center pb-5" >
    <h1 class="display-4">Upcoming Trips</h1>
</div>

<div class="card-deck">

    @{foreach (var trip in Model)
        {
            var photopath = "~/images/" +  (trip.PhotoPath ?? "no-image.png");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3 class="text-center">@trip.Name</h3>
            </div>

            <div class="card-body">
                <img class="card-img text-center" src=@photopath asp-append-version="true"> 
            </div>

            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="TripDetails" asp-route-id=@trip.ID class="btn btn-primary">View</a>
                <a asp-controller="Home" asp-action="EditTrip" asp-route-id=@trip.ID class="btn btn-primary">Edit</a>
                <a asp-controller="Home" asp-action="DeleteTrip" asp-route-id=@trip.ID class="btn btn-danger">Delete</a>
            </div>

        </div>  
        }
    }
</div>
