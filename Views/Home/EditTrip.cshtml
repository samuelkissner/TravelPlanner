@model Trip

@{
ViewData["Title"] = "EditTrip";
}

<h1>Edit Trip</h1>

<form asp-controller="Home" asp-action="EditTrip" method="post" class="mt-3">
   
    <div class="form-group">
        <label asp-for=@Model.Name class="control-label"></label>
        <input asp-for=@Model.Name class="form-control" />
        <span asp-validation-for=@Model.Name class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for=@Model.Description class="control-label"></label>
        <input asp-for=@Model.Description class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for=@Model.DepartureDate class="control-label"></label>
        <input asp-for=@Model.DepartureDate class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for=@Model.ReturnDate class="control-label"></label>
        <input asp-for=@Model.ReturnDate class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for=@Model.Budget class="control-label"></label>
        <input asp-for=@Model.Budget class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>





